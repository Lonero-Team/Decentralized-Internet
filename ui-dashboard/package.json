{
  "name": "decentralized-internet-ui",
  "version": "1.0.0",
  "description": "Central UI Dashboard for Decentralized Internet SDK",
  "main": "main.js",
  "author": "Decentralized Internet Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "web": "webpack-dev-server --mode development",
    "build-web": "webpack --mode production"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "express": "^5.2.1",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "axios": "^1.6.2",
    "ps-node": "^0.1.6",
    "node-fetch": "^2.6.7",
    "ws": "^8.16.0",
    "pm2": "^6.0.14",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "vis-network": "^9.1.9",
    "d3": "^7.8.5"
  },
  "devDependencies": {
    "electron-builder": "^26.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.6.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  },
  "build": {
    "appId": "org.decentralizedinternet.ui",
    "productName": "Decentralized Internet UI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    }
  }
}
